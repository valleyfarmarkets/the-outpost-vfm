# Environment Variables Template
# Copy this file to .env.local and fill in your values

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Guesty API Credentials (Booking Engine API)
# Get these from your Guesty dashboard → Distribution → Booking Engine API
GUESTY_CLIENT_ID=your_client_id_here
GUESTY_CLIENT_SECRET=your_client_secret_here
GUESTY_API_BASE_URL=https://booking.guesty.com
GUESTY_OAUTH_URL=https://booking.guesty.com/oauth2/token

# Redis (used for Guesty OAuth token + locking)
# Provide a single Redis connection string. You can use either REDIS_URL or
# STORAGE_REDIS_URL (legacy name) — the app will read whichever is set.
REDIS_URL=redis://default:your_password@your_redis_host:6379
# STORAGE_REDIS_URL=

# Stripe - Required for payment processing
# Get from Stripe dashboard (use test keys for development)
# Test keys start with pk_test_ and sk_test_
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here

# Booking Configuration
# Quote expiration (minutes)
QUOTE_EXPIRATION_MINUTES=15
# Feature flag to enable Guesty booking UI
NEXT_PUBLIC_ENABLE_GUESTY_BOOKING=false

# Supabase - Required for database
# Get these from your Supabase project settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Email (optional)
SUPPORT_EMAIL=support@example.com
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Optional: Contact & Maps
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
# NEXT_PUBLIC_CONTACT_EMAIL=
